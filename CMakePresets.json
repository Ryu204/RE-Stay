{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24
    },
    "configurePresets" : [
        {
            "name" : "base",
            "binaryDir": "build"
        },
        {
            "name": "clang-tidy",
            "inherits" : "base",
            "cacheVariables": {
                "USER_DEFINED_CLANG_TIDY" : "clang-tidy;--header-filter=${sourceDir}/*.hpp"
            }
        },
        {
            "name": "ci-debug",
            "inherits" : "base",
            "cacheVariables": {
                "BOX2D_BUILD_TESTBED" : "OFF",
                "JSONCPP_WITH_TESTS" : "OFF",
                "CMAKE_BUILD_TYPE" : "Debug"
            }
        }
    ]
}
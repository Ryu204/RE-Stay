{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24
    },
    "configurePresets" : [
        {
            "name" : "base",
            "binaryDir": "build"
        },
        {
            "name": "clang-tidy",
            "inherits" : "base",
            "cacheVariables": {
                "CMAKE_CXX_CLANG_TIDY" : "clang-tidy;--header-filter=${sourceDir}/*"
            }
        }
    ]
}